{
  "name": "extrafood",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">= 8.x",
    "npm": ">= 5.x",
    "yarn": ">= 1.x"
  },
  "license": "MIT",
  "scripts": {
    "assets": "webpack --display-max-modules 0 --color true",
    "assets:watch": "yarn assets -w",
    "build": "yarn assets -p",
    "build:dev": "yarn assets -d",
    "dev": "concurrently 'yarn watch' 'yarn assets:watch -d --color true --display minimal' --names 'ðŸ–¥ ,ðŸ“¦ ' --prefix '[{name}] '",
    "start": "yarn assets -p && node ./start.js",
    "watch": "nodemon ./start.js --ignore app/public/",
    "watch:debug": "nodemon ./start.js --inspect --ignore app/public/"
  },
  "browserslist": [
    "last 2 years",
    "IE 11"
  ],
  "dependencies": {
    "@bugsnag/js": "^5.2.0",
    "@bugsnag/node": "^5.2.0",
    "@bugsnag/plugin-express": "^5.2.0",
    "axios": "^0.18.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.3",
    "dayjs": "^1.8.5",
    "dompurify": "^1.0.9",
    "dotenv": "^6.2.0",
    "es6-promisify": "^6.0.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "faker": "^4.1.0",
    "forever": "^0.15.3",
    "glob": "^7.1.3",
    "html-to-text": "^4.0.0",
    "jimp": "^0.6.0",
    "juice": "^5.1.0",
    "md5": "^2.2.1",
    "mongoose": "^5.4.10",
    "mongoose-mongodb-errors": "^0.0.2",
    "multer": "^1.4.1",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "pug": "^2.0.3",
    "slugs": "^0.1.3",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.14",
    "@fortawesome/free-brands-svg-icons": "^5.7.1",
    "@fortawesome/free-regular-svg-icons": "5.7.1",
    "@fortawesome/free-solid-svg-icons": "5.7.1",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "autoprefixer": "^9.4.7",
    "babel-loader": "^8.0.5",
    "bootstrap": "^4.2.1",
    "bootswatch": "^4.2.1",
    "compression-webpack-plugin": "^2.0.0",
    "concurrently": "4.1.0",
    "cssnano": "^4.1.8",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "terser-webpack-plugin": "^1.2.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpackbar": "^3.1.5"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "import",
      "html",
      "markdown",
      "prettier"
    ],
    "rules": {
      "func-names": "off",
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "res|next|^err"
        }
      ],
      "max-len": "off",
      "no-underscore-dangle": "off",
      "space-before-function-paren": "off"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "plugins": [
      "all"
    ],
    "printWidth": 120,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
